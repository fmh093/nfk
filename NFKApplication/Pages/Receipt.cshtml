@page
@model NFKApplication.Pages.ReceiptModel

<h2>Receipt</h2>
<p>Thank you for your payment!</p>


<h2>
    <span class="highlight">@Model.Basket.FirstName</span> get your shoes dirty cause we'll be delivering to your address at
    <span class="highlight">@Model.Basket.Address</span> very soon!
</h2>

<hr />

<div class="container mt-5">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>SKU</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Basket.LineItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Sku</td>
                    <td>@item.Amount</td>
                </tr>
            }
        </tbody>
    </table>
</div>